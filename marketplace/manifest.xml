<?xml version="1.0" encoding="UTF-8" ?>
<ApplicationManifest xmlns="http://schemas.google.com/ApplicationManifest/2009">
  <Name>Cloudreach Powerpanel Dev</Name>
  <Description>Development version of Cloudreach Powerpanel</Description>

  <!-- Administrators and users will be sent to this URL for application support -->
  <Support>
    <Link rel="support" href="https://kamil.latest.ga-powerpanel-dev.appspot.com/support/"/>
    <Link rel="setup" href="https://kamil.latest.ga-powerpanel-dev.appspot.com/openid/setup/${DOMAIN_NAME}/"/>
  </Support>

  <!-- Show this link in Google's universal navigation for all users -->
  <Extension id="navLink" type="link">
    <Name>Cloudreach Powerpanel Dev</Name>
    <Url>https://kamil.latest.ga-powerpanel-dev.appspot.com/openid/login/${DOMAIN_NAME}/?from=google</Url>
    <Scope ref="provisioningAPI"/>
  </Extension>

  <!-- Declare our OpenID realm so our app is white listed -->
  <Extension id="realm" type="openIdRealm">
    <Url>https://kamil.latest.ga-powerpanel-dev.appspot.com/</Url>
  </Extension>

  <!-- Need access to the Calendar API -->
  <Scope id="provisioningAPI">
    <Url>https://apps-apis.google.com/a/feeds/user/#readonly</Url>
    <Reason>This app manages domain user accounts.</Reason>
  </Scope>
</ApplicationManifest>
